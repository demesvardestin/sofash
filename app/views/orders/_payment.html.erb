<form data-submit="remote" method="post" action="/checkout">
    <div class="field row">
        <div class="col-md-6">
            <input type="text" name="cardholder_name" placeholder="Name on card"
                class="form-control">
        </div>
        
        <div class="col-md-6">
            <input type="text" name="card_number" placeholder="Card number"
                class="form-control">
        </div>
    </div>
    
    <div class="field row">
        <div class="col-md-4">
            <input type="text" name="card_cvv" placeholder="CVV" class="form-control">
        </div>
        
        <div class="col-md-4">
            <input type="text" name="card_expiration" placeholder="MM/YY" class="form-control">
        </div>
        
        <div class="col-md-4">
            <input type="text" name="card_zipcode" placeholder="Zipcode" class="form-control">
        </div>
    </div>
</form>