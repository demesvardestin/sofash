<div id="add-to-cart-div">
    <% if is_in_cart item %>
        <button class="btn btn-theme btn-block" disabled>
            Item added to cart
        </button>
    <% else %>
    <div class="row">
        <div class="col-md-6 d-grid gap-2">
            <%= link_to add_to_cart_path(:item_id => item.id), class:"d-grid gap-2",
                style:"text-decoration: none;", remote: true do %>
                <button class="btn btn-primary btn-block" onclick="showSpinner(this)">
                    <span>
                        Book Now
                    </span>
                </button>
            <% end %>
        </div>
        <div class="col-md-6 d-grid gap-2">
            <button class="btn btn-outline-primary btn-block" onclick="showSpinner(this)">
                <span>
                    Share
                </span>
            </button>
        </div>
    </div>
    <% end %>
</div>

<script>
    showSpinner = (elem) => {
        elem.innerHTML = `
            <div class="spinner-grow text-light" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        `;
    }
</script>