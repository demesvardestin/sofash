<style>
    .carousel-control-prev, .carousel-control-next {
        display: none;
    }
    
    .carousel-indicators li {
        min-height: 30px;
        background: url("<%= @item.image.first_source %>");
        background-size: contain;
        background-repeat: no-repeat;
    }
    
    img {
        border-radius: 10px;
    }
</style>

<section id="inventory-item-<%= @item.id %>" class="inventory-item">
    <div class="row">
        <div class="col-md-7">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/browse">Browse</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <%= @item.item_name %>
                </li>
              </ol>
            </nav>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-7">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active" data-interval="60000">
                  <img src="https://wearwardrobe.s3.amazonaws.com/uploads/photo/image/17351/medium_IMG_4116.png" class="d-block w-100"
                    alt="<%= @item.item_name %>" style="filter: brightness(50%);">
                </div>
                <div class="carousel-item" data-interval="60000">
                  <img src="https://wearwardrobe.s3.amazonaws.com/uploads/photo/image/17351/medium_IMG_4116.png" class="d-block w-100"
                    alt="<%= @item.item_name %>" style="filter: brightness(40%);">
                </div>
                <div class="carousel-item" data-interval="60000">
                  <img src="https://wearwardrobe.s3.amazonaws.com/uploads/photo/image/17351/medium_IMG_4116.png" class="d-block w-100"
                    alt="<%= @item.item_name %>" style="filter: brightness(30%);">
                </div>
                
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleFade" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleFade" data-slide-to="1"></li>
                    <li data-target="#carouselExampleFade" data-slide-to="2"></li>
                </ol>
              </div>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
        </div>
        
        <div class="col-md-4 offset-md-1">
            <div class="item-data">
                <div class="item-name">
                    <h5>
                        <%= @item.item_name %>
                    </h5>
                </div>
                
                <div class="item-name">
                    <p>
                        <strong>
                            <a href="/brand/<%= @item.item_brand %>">
                                <%= @item.item_brand %>
                            </a>
                        </strong>
                    </p>
                </div>
                
                <div class="item-size">
                    <p>
                        Size: US L/EU M
                        <span class="badge badge-<%= availability_color_for @item %>">
                            <%= @item.availability %>
                        </span>
                    </p>
                </div>
                
                <div class="item-market-value">
                    <p>
                        Estimated Market Value: $<%= @item.market_value %>
                    </p>
                </div>
                
                <div class="item-condition">
                    <p>
                        Condition: <%= @item.condition %>
                    </p>
                </div>
                
                <hr>
                
                <div class="item-actions">
                    <%= render partial: "workflow/inventory_items/actions",
                        locals: { item: @item } %>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="item-description">
                <h6>
                    Description
                </h6>
                
                <p>
                    <%= sanitize @item.item_description %>
                </p>
            </div>
            
            <hr>
            
            <div class="item-reviews">
                <h6>Reviews</h6>
            </div>
            
            <hr>
            
            <div class="item-recommendations">
                <h6>More like this</h6>
            </div>
        </div>
    </div>
</section>