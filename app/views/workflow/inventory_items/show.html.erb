<style>
    #carouselExampleIndicators li {
        height: 70px;
        width: 55px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>

<section id="inventory-item-<%= @item.id %>" class="inventory-item">
    <div class="row">
        <div class="col-md-2 offset-md-1">
            <a class="btn btn-primary box-shadow" href="/">
                <i class="fa fa-angle-left"></i> Back
            </a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-6 offset-md-1" style="padding-bottom: 100px;">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators" style="top: 100%;">
                    <% @item.image.sources.each_with_index do |s, idx| %>
                        <li data-target="#carouselExampleIndicators"
                            data-slide-to="<%= idx %>"class="active"
                            style="background-image: url('<%= s.url %>')"></li>
                    <% end %>
                </ol>
                <div class="carousel-inner">
                    <% @item.image.sources.each_with_index do |s, idx| %>
                        <div class="carousel-item <%= "active" if idx == 0 %>">
                            <img src="<%= s.url %>" class="d-block w-100"
                                alt="<%= @item.item_name %>">
                        </div>
                    <% end %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="item-data">
                <div class="item-name">
                    <h5>
                        <%= @item.item_name %>
                    </h5>
                </div>
                
                <div class="item-name">
                    <p>
                        <strong>
                            <a href="/brand/<%= @item.item_brand %>">
                                <%= @item.item_brand %>
                            </a>
                        </strong>
                    </p>
                </div>
                
                <div class="item-size">
                    <p>
                        Size: US L/EU M
                        <span class="badge badge-<%= availability_color_for @item %>">
                            <%= @item.availability %>
                        </span>
                    </p>
                </div>
                
                <div class="item-market-value">
                    <p>
                        Originally retails for: $<%= @item.market_value %>
                    </p>
                </div>
                
                <div class="item-condition">
                    <p>
                        Condition: <%= @item.condition %>
                    </p>
                </div>
                
                <hr>
                
                <div class="item-description">
                    <h6>
                        Description
                    </h6>
                    
                    <p>
                        <%= sanitize @item.item_description %>
                    </p>
                </div>
                
                <hr>
                
                <div class="item-actions">
                    <%= render partial: "workflow/inventory_items/actions",
                        locals: { item: @item } %>
                </div>
            </div>
        </div>
    </div>
</section>