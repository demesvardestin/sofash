<section id="signup-section">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <% if !flash.empty? %>
        <div class="alert alert-danger" role="alert">
          <%- flash.each do |name, msg| -%>
            <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
          <%- end -%>
        </div>
      <% end %>
      
      <div class="card">
        <div class="card-body">
          <div class="form-wrapper">
            <div class="form-main">
              <%= render partial: "common/card_header", locals: { text: "Log In" } %>
      
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                    class:"form-control", placeholder:"Email" %>
                </div>
              
                <div class="field">
                  <%= f.password_field :password, autocomplete: "current-password",
                    class:"form-control", placeholder:"Password" %>
                </div>
              
                <div class="actions d-grid gap-2">
                  <%= f.submit "Log in", class:"btn btn-primary btn-block", data: { "disable-with": "Logging you in..." } %>
                </div>
              <% end %>
              
              <hr>
              <p align="center">
                <a href="<%= registration_path_for_resource resource_name %>" class="body-link">
                  Don't have an account? Sign up
                </a>
                <a href="<%= new_password_path_for_resource resource_name %>" class="body-link">
                  Forgot your password
                </a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>