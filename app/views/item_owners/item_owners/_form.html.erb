<%= form_for(@io, :html => { :multipart => true, :id => "io-profile-form" }) do |f| %>
    <div class="field">
        <div class="row">
            <div class="col-lg-6">
                <%= f.text_field :first_name, class:"form-control",
                    placeholder:"First Name", required: true %>
            </div>
            
            <div class="col-lg-6">
                <%= f.text_field :last_name, class:"form-control",
                    placeholder:"Last Name", required: true %>
            </div>
        </div>
    </div>
    
    <div class="field">
        <div class="row">
            <div class="col-lg-12">
                <%= f.text_field :street_address, class:"form-control",
                    placeholder:"Street Address", required: true %>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-5">
                <%= f.text_field :city, class:"form-control",
                    placeholder:"City", required: true %>
            </div>
            <div class="col-lg-3">
                <%= f.text_field :state, class:"form-control",
                    placeholder:"State", required: true %>
            </div>
            <div class="col-lg-4">
                <%= f.text_field :zipcode, class:"form-control",
                    placeholder:"Zipcode", required: true %>
            </div>
        </div>
    </div>
    
    <div class="submit d-grid gap-2">
        <hr>
        <%= f.submit "Continue", class:"btn btn-primary btn-block",
            data: { :disable_with => "updating..." } %>
    </div>
<% end %>