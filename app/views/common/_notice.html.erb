<style type="text/css">
    .alert {
        position: absolute;
        top: 74px;
        width: 100vw;
        z-index: 999;
        opacity: 0.7;
        text-align: center;
        padding: 5px 15px;
        display: none;
    }
    
    .alert span {
        font-size: 14px;
    }
</style>

<div class="alert alert-info alert-dismissible fade show" role="alert">
  <span><%= flash[:notice] if flash[:notice] %></span>
  <i class="fas fa-times cursor-pointer float-right"
    onclick="$('.alert').hide();" style="margin-right: 15px;"></i>
</div>